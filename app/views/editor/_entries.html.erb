<% @entries.each do |entry| %>
  <div class="entry" id="entry-<%= entry[:id] %>">
    <div class="border m-0 my-2 row">
      <div class="border col-sm-6 col-md-4">
        <div class="row">
          <div class="border col-4 text-end">
            <%= entry[:amount] %>
          </div>
          <div class="border col-8 flex-grow-1 flex-shrink-1 text-start">
            <%= entry[:unit] %>
          </div>
        </div>
      </div>
      <div class="border col-sm text-start">
        <%= entry[:name] %>
      </div>
      <div class="border col-sm-2">
        <button id="delete-entry-button" type="button" data-entry-id="<%= entry[:id] %>">
          Delete
        </button>
      </div>
    </div>
  </div>
<% end %>
